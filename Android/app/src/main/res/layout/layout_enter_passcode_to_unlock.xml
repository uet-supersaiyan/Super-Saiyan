<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/enter_password_to_unlock_text_size" />

        <TableRow
            android:layout_width="match_parent"
            android:id="@+id/tb_contain_ring"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <View
                android:id="@+id/v_ring1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/dra_shape_circle_stroke"></View>

            <View
                android:id="@+id/v_ring2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/dra_shape_circle_stroke"></View>

            <View
                android:id="@+id/v_ring3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/dra_shape_circle_stroke"></View>

            <View
                android:id="@+id/v_ring4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/dra_shape_circle_stroke"></View>

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:orientation="vertical"
        android:weightSum="4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_1"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_2"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:layout_marginLeft="@dimen/circle_button_margin"
                android:layout_marginRight="@dimen/circle_button_margin"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_3"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_4"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_5"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:layout_marginLeft="@dimen/circle_button_margin"
                android:layout_marginRight="@dimen/circle_button_margin"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_6"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_7"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_8"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:layout_marginLeft="@dimen/circle_button_margin"
                android:layout_marginRight="@dimen/circle_button_margin"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />

            <Button
                android:id="@+id/bt_9"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/bt_0"
                android:layout_width="@dimen/circle_button_lockscreen_size"
                android:layout_height="@dimen/circle_button_lockscreen_size"
                android:background="@drawable/bg_circle_stroke_default"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/circle_button_text_size"
                android:typeface="serif" />


        </TableRow>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Clear"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
    </RelativeLayout>

</LinearLayout>